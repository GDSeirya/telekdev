 shoot_particles ( dualbeammixxer.obj , 1 , 1, 0, 0, 0, 0, 0, 5)

on primary_release()
 play_sound( hatredrayendar.wav, 50, 1, 0.05 )

on active_timer( 0, max_trigger = 1 )
